{{#extends 'base'}}
{{#block 'content'}}

    <h3>Deleting Service: {{service.name}}</h3>

    <form method="POST">
        <div class="alert alert-danger">
            <p>Deleting the service will be permanent. Are you sure you want to remove {{service.name}}</p>
            <input type="submit" class="btn btn-danger" value="Delete Permanently"/>
            <a href="/services" class="btn btn-success">Cancel</a>
        </div>
    </form>

{{/block}}
{{/extends}}